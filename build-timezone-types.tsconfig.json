{
  "extends": "./build.tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "inlineSourceMap": false,
    "rootDirs": ["./templates"],
    "outDir": "timezones",
    "emitDeclarationOnly": true
  },
  "include": [
    "templates/**/*.type.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "timezones",
    "dist",
    "**/*.spec.ts"
  ]
}